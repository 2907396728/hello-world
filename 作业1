</html>var app = new Vue({
    el:'#app',
    data:{
        foodList:[
            {name:'肉包',price:3,discount:0.9},
            {name:'三鲜包',price:5,discount:0.8},
            {name:'菜包',price:10,discount:0.1},
        ]
    }
});
